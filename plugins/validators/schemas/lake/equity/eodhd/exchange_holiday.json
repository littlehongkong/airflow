{
  "table_name": "exchange_holiday",
  "description": "거래소 휴장일 정보 (EODHD exchange-holidays API 기반)",
  "columns": [
    {"name": "holiday_name", "type": "String", "nullable": false},
    {"name": "date", "type": "DateTime", "nullable": false},
    {"name": "type", "type": "String", "nullable": true},
    {"name": "exchange_code", "type": "String", "nullable": false},
    {"name": "is_open", "type": "Bool", "nullable": true},
    {"name": "country", "type": "String", "nullable": true},
    {"name": "timezone", "type": "String", "nullable": true}
  ],
  "constraints": {
    "unique": ["exchange_code", "date"],
    "non_nullable": ["exchange_code", "holiday_name", "date"],
    "patterns": {
      "exchange_code": "^[A-Z0-9]{1,10}$"
    }
  }
}
