{
  "table_name": "exchange_detail",
  "description": "거래소 상세정보 (ExchangeHolidays 포함, flatten 아님)",
  "columns": [
    {"name": "Name", "type": "String", "nullable": false, "description": "거래소명"},
    {"name": "Code", "type": "String", "nullable": false, "description": "거래소 코드"},
    {"name": "OperatingMIC", "type": "String", "nullable": true, "description": "운영 MIC"},
    {"name": "Country", "type": "String", "nullable": true, "description": "국가명"},
    {"name": "Currency", "type": "String", "nullable": true, "description": "거래 통화"},
    {"name": "Timezone", "type": "String", "nullable": true, "description": "시간대"},
    {"name": "isOpen", "type": "Bool", "nullable": true, "description": "현재 개장 여부"},
    {"name": "ActiveTickers", "type": "Int", "nullable": true, "description": "활성 티커 수"},
    {"name": "UpdatedTickers", "type": "Int", "nullable": true, "description": "업데이트된 티커 수"},
    {"name": "TradingHours", "type": "String", "nullable": true, "description": "거래 시간 (JSON 문자열)"},
    {"name": "ExchangeHolidays", "type": "String", "nullable": true, "description": "휴장일 정보 (JSON 문자열)"}
  ],
  "constraints": {
    "unique": ["Code"],
    "non_nullable": ["Code", "Name"],
    "patterns": {
      "Code": "^[A-Z0-9]{1,10}$"
    }
  }
}